<Page x:Class="AgendaTelefonica.AddContatoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AgendaTelefonica"
      xmlns:ViewModels="clr-namespace:AgendaTelefonica.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContatoPage">

    <Page.Resources>
        <ViewModels:AddContatoViewModel x:Key="AddContatoViewModel" />
    </Page.Resources>

    <Grid DataContext="{StaticResource ResourceKey=AddContatoViewModel}">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Nome"/>
            <TextBox x:Name="NomeBox" Text="{Binding Nome, Mode=TwoWay}"/>
            <TextBlock Text="Número"/>
            <TextBox x:Name="NumeroBox" Text="{Binding Numero, Mode=TwoWay}"/>
            <TextBlock Text="Anotação"/>
            <TextBox x:Name="AnotacaoBox" Text="{Binding Anotacao, Mode=TwoWay}"/>
            <Button Content="Adicionar"
                    Command="{Binding RegisterContato}"/>
        </StackPanel>
    </Grid>
</Page>
